<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_navigation"
        app:startDestination="@id/titleFragment">
    <fragment android:id="@+id/titleFragment" android:name="com.example.wordsearch.TitleFragment"
              android:label="TitleFragment">
        <action android:id="@+id/action_titleFragment_to_gameFragment" app:destination="@id/gameFragment"/>
    </fragment>
    <fragment android:id="@+id/gameFragment" android:name="com.example.wordsearch.GameFragment"
              android:label="GameFragment">
        <action android:id="@+id/action_gameFragment_to_scoreFragment" app:destination="@id/scoreFragment"
                app:launchSingleTop="true" app:popUpTo="@id/gameFragment" app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/scoreFragment" android:name="com.example.wordsearch.ScoreFragment"
              android:label="ScoreFragment">
        <action android:id="@+id/action_restart" app:destination="@id/gameFragment"/>
        <argument android:name="score" app:argType="integer"/>
    </fragment>
</navigation>